{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "strictNullChecks": false
    },
    "include": ["**/*.ts"],
    "exclude": ["src/**/*.spec.ts", "node_modules"]
}
